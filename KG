-- üêæ Pet Size Changer (Visual Only) - Mobile Friendly
-- By Tol mo üòé

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local Workspace = game:GetService("Workspace")

-- üñ• GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame", ScreenGui)
Frame.Size = UDim2.new(0, 200, 0, 250)
Frame.Position = UDim2.new(1, -210, 0.5, -125)
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.BorderSizePixel = 0
Frame.BackgroundTransparency = 0.2
Frame.Active = true
Frame.Draggable = true

-- Title
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 25)
Title.BackgroundTransparency = 1
Title.Text = "üêæ Pet Size Changer"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 14

-- Pet List Frame
local PetListFrame = Instance.new("ScrollingFrame", Frame)
PetListFrame.Size = UDim2.new(1, -10, 1, -35)
PetListFrame.Position = UDim2.new(0, 5, 0, 30)
PetListFrame.CanvasSize = UDim2.new(0, 0, 0, 0)
PetListFrame.BackgroundTransparency = 1
PetListFrame.ScrollBarThickness = 3

-- Loading Bar BG
local LoadingBarBG = Instance.new("Frame", Frame)
LoadingBarBG.Size = UDim2.new(1, -10, 0, 5)
LoadingBarBG.Position = UDim2.new(0, 5, 1, -10)
LoadingBarBG.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
LoadingBarBG.BorderSizePixel = 0
local LoadingBar = Instance.new("Frame", LoadingBarBG)
LoadingBar.Size = UDim2.new(0, 0, 1, 0)
LoadingBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
LoadingBar.BorderSizePixel = 0

-- Detect pets function
local function getPets()
    local pets = {}
    -- Check Character
    for _, obj in ipairs(LocalPlayer.Character:GetChildren()) do
        if obj:IsA("Model") or obj:IsA("Accessory") then
            table.insert(pets, obj)
        end
    end
    -- Check Backpack
    for _, obj in ipairs(LocalPlayer.Backpack:GetChildren()) do
        if obj:IsA("Model") or obj:IsA("Tool") then
            table.insert(pets, obj)
        end
    end
    return pets
end

-- Refresh pet list in GUI
local function refreshList()
    for _, child in ipairs(PetListFrame:GetChildren()) do
        if child:IsA("TextButton") then child:Destroy() end
    end
    local pets = getPets()
    local yPos = 0
    for _, pet in ipairs(pets) do
        local btn = Instance.new("TextButton", PetListFrame)
        btn.Size = UDim2.new(1, 0, 0, 25)
        btn.Position = UDim2.new(0, 0, 0, yPos)
        btn.Text = pet.Name .. "  [Change Size]"
        btn.TextColor3 = Color3.fromRGB(255, 255, 255)
        btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        btn.BorderSizePixel = 0
        btn.Font = Enum.Font.Gotham
        btn.TextSize = 12

        btn.MouseButton1Click:Connect(function()
            -- Loading animation
            LoadingBar.Size = UDim2.new(0, 0, 1, 0)
            LoadingBar:TweenSize(UDim2.new(1, 0, 1, 0), "Out", "Linear", 1, true)
            task.wait(1)
            -- Biglang laki
            if pet:IsA("Model") and pet.PrimaryPart then
                pet.PrimaryPart.Size = pet.PrimaryPart.Size * 3
            elseif pet:IsA("Accessory") and pet:FindFirstChild("Handle") then
                pet.Handle.Size = pet.Handle.Size * 3
            end
        end)
        yPos = yPos + 27
    end
    PetListFrame.CanvasSize = UDim2.new(0, 0, 0, yPos)
end

-- Auto refresh kapag may pagbabago sa Character/Backpack
LocalPlayer.Character.ChildAdded:Connect(refreshList)
LocalPlayer.Character.ChildRemoved:Connect(refreshList)
LocalPlayer.Backpack.ChildAdded:Connect(refreshList)
LocalPlayer.Backpack.ChildRemoved:Connect(refreshList)

-- Initial load
refreshList()
